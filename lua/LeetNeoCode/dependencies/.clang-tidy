Checks: >
  -*,
  clang-diagnostic-*,
  clang-analyzer-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  bugprone-*,
  readability-*,
  misc-*,
  portability-*,
  security-*,
  hicpp-*,

  # ── explicit removals ───────────────────────────────
  -modernize-use-trailing-return-type
  -readability-identifier-length
  -modernize-use-equals-default
  -hicpp-use-equals-default          # ← NEW
  -hicpp-braces-around-statements
  -readability-implicit-bool-conversion
  -readability-braces-around-statements
  -misc-no-recursion
  -readability-make-member-function-static

HeaderFilterRegex: ".*"
FormatStyle: file

CheckOptions:
  - key: cppcoreguidelines-avoid-magic-numbers.IgnoreNumbers
    value: "0,1"
  - key: readability-identifier-naming.ClassCase
    value: "CamelCase"
  - key: readability-identifier-naming.FunctionCase
    value: "camelBack"
# WarningsAsErrors: '*'


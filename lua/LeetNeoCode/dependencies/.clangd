CompileFlags:
  Add: [
      -std=c++23,
      -I./include,

      # ── enabled warnings ───────────────────────────────────────────────
      -Wall,
      -Wextra,
      -Wpedantic,
      -Weverything,
      -Wshadow,
      -Wconversion,
      -Wsign-conversion,
      -Wundef,
      -Wmissing-include-dirs,
      -Wfloat-conversion,
      -Wformat=2,
      -Wunreachable-code,
      -Wdouble-promotion,

      # ── disabled compiler notes ────────────────────────────────────────
      -Wno-unused-parameter,
      -Wno-return-type,
      -Wno-c++98-compat,
      -Wno-c++98-compat-pedantic,
      -Wno-newline-eof,
    ]

Diagnostics:
  UnusedIncludes: None #  turn off “header not used directly”

  ClangTidy:
    FastCheckFilter: "None"
    Remove: [
        modernize-use-trailing-return-type,
        readability-identifier-length,
        modernize-use-equals-default,
        hicpp-use-equals-default, # ← NEW: hides “use = default” note
        performance-unnecessary-value-param,
      ]

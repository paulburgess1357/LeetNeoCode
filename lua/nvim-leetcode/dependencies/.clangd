CompileFlags:
  Add: [
      -std=c++23,
      -I./include,

      # ---------------- enabled warnings ----------------
      -Wall,
      -Wextra,
      -Wpedantic,
      -Weverything,
      -Wshadow,
      -Wconversion,
      -Wsign-conversion,
      -Wundef,
      -Wmissing-include-dirs,
      -Wfloat-conversion,
      -Wformat=2,
      -Wunreachable-code,
      -Wdouble-promotion,

      # ---------------- disables / tweaks ----------------
      -Wno-unused-parameter, # ← hides the “unused parameter” notes
      -Wno-c++98-compat,
      # -Werror,                      # promote warnings to errors (off)
      # -Wno-sign-compare,
      # -Wno-sign-conversion,
      # -Wno-shorten-64-to-32,
    ]

Diagnostics:
  ClangTidy:
    FastCheckFilter: "None" # keep quick-check speed
    Remove: [
        modernize-use-trailing-return-type,
        readability-identifier-length, # ← suppresses that specific rule
      ]
